#include <opencv2/opencv.hpp>
#include <iostream>

using namespace cv;
using namespace std;

int main(int argc, char** argv)

{/*Création de l’objet imageet lecture de l’image à partir du répertoire associé en utilisant la méthode imread()*/

	Mat image = imread("C:/Users/louis/Downloads/dino.png");

	// Vérifier si l’image existe bien dans le répertoire

	if (image.empty())
	{
		cout << "Could not open or find the image" << endl;
		cin.get(); //wait for any key press
		return -1;
	}

	/*Test de medianblur */

	Mat median_blur;
	medianBlur(image, median_blur , 5 );
	imshow("median blur", median_blur);
	waitKey(0);

	// Sauvegarde d’une image traitée à l'aide de la méthode imwrite ()

	imwrite("C:/My_new_image.jpg",median_blur);

	waitKey(0); destroyAllWindows();

	return 0;

}
